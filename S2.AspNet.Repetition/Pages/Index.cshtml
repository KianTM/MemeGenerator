@page
@model S2.AspNet.Repetition.Pages.IndexModel
@{
    ViewData["Title"] = "Forside";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Min første memegenerator</h1>
<div class="wrapper">
    <article>
        <form action="NewMeme" method="get">
            <div class="memeWrapper">
                <div class="memeSelector">
                    <img src="~/Img/meme1.png" />
                    <input type="radio" name="imageselected" value="1" checked />
                </div>
                <div class="memeSelector">
                    <img src="~/Img/meme2.png" />
                    <input type="radio" name="imageselected" value="2" />
                </div>
                <div class="memeSelector">
                    <img src="~/Img/meme3.png" />
                    <input type="radio" name="imageselected" value="3" />
                </div>
                <div class="memeSelector">
                    <img src="~/Img/meme4.png" />
                    <input type="radio" name="imageselected" value="4" />
                </div>
                <div class="memeSelector">
                    <img src="~/Img/meme5.png" />
                    <input type="radio" name="imageselected" value="5" />
                </div>
                <div class="memeSelector">
                    <img src="~/Img/meme6.png" />
                    <input type="radio" name="imageselected" value="6" />
                </div>
                <div class="memeSelector">
                    <img src="~/Img/meme7.png" />
                    <input type="radio" name="imageselected" value="7" />
                </div>
            </div>
            <div class="memeSelector">
                <h2>Tekst størrelse</h2>
                <div>
                    <p>Lille</p>
                    <input type="radio" name="textSize" value="1" />
                </div>
                <div>
                    <p>Mellem</p>
                    <input type="radio" name="textSize" value="2" checked />
                </div>
                <div>
                    <p>Stor</p>
                    <input type="radio" name="textSize" value="3" />
                </div>
            </div>
            <div class="memeSelector">
                <h2>Tekst farve</h2>
                <div>
                    <p>Sort</p>
                    <input type="radio" name="textColor" value="1" />
                </div>
                <div>
                    <p>Hvid</p>
                    <input type="radio" name="textColor" value="2" checked />
                </div>
                <div>
                    <p>Gul</p>
                    <input type="radio" name="textColor" value="3" />
                </div>
            </div>
            <div class="memeSelector">
                <h2>Tekst Position</h2>
                <select name="TextPosition">
                    <option value="top-left">Top til venstre</option>
                    <option value="top-center">Top i midten</option>
                    <option value="top-right">Top til højre</option>
                    <option value="centered">I midten</option>
                    <option value="bottom-left">Bund til venstre</option>
                    <option value="bottom-center">Bund i midten</option>
                    <option value="bottom-right">Bund til højre</option>
                </select>
            </div>
            <div class="memeSelector memeText">
                <input type="text" size="50" name="MemeName" placeholder="Skriv dit memes navn her"/>
            </div>
            <div class="memeSelector memeText">
                <input type="text" size="50" name="memeText" placeholder="Skriv din meme text" />
                <input type="submit" value="Generer meme" />
            </div>
        </form>
    </article>
</div>



